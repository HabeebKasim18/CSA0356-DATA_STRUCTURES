#include<stdio.h>
int main() 

{
int n,a[n];
  printf("Enter number of elements in the array: ");

    scanf("%d", &n);
    printf("Enter elements in the array: ");

    for(int i=0;i<n;i++)


    {

        scanf("%d",&a[i]);

    }

    printf("Even numbers in the array are: ");

    for(int i=0;i<n;i++)

    {

        if(a[i]%2==0)

            printf("%d ", a[i]);

    }
 printf("\nOdd numbers in the array are: ");

    for(int i=0;i<n;i++)

    {

        if(a[i]%2==1)

            printf("%d ", a[i]);

    }

}
